        "def Countletters (str, letter):\n",
        "   count=0\n",
        "   index=0\n",
        " \n",
        "   while index<len(str):\n",
        "      if letter==str[index]:\n",
        "        count=count + 1\n",
        "      index=index + 1\n",
        "   return count"
